<% include ../partial/header.ejs %>
<div class="container">
    <h2 style="text-align:center;">Edit CampGround</h2>
    <div style="width:30%; margin: 20px auto;">
    <form action="/campground/<%=camp._id%>/?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" value = "<%=camp.name%>" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[img]" value = "<%=camp.img%>" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="location" value = "<%=camp.location%>/>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[price]" value = "<%=camp.price%>" />
        </div>
         <div class="form-group">
            <input class="form-control" type="text" name="campground[desc]" value = "<%=camp.desc%>" />
        </div>
        <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block"  >Submit!</button>
        </div>
    </form>
    </div>
</div>
